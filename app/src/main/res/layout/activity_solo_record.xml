<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.activity.SoloRecordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBackArrow"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/recv_ic_arrow"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imgBackArrow"
            app:layout_constraintBottom_toBottomOf="@+id/imgBackArrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textSize="22sp"
            android:textColor="@color/colorLightBlack"
            android:text="123"/>


        <Button
            android:id="@+id/btnSave"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/dark_green_button_selector"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintEnd_toEndOf="@id/tvDate"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Save"/>


        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnSave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorTransparentGray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:text="I'M GRATEFUL FOR:"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/layoutContentFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorTransparentLightGray">

                <EditText
                    android:id="@+id/editDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="top"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorBlack"
                    android:text="I made a time just with myself. I am very grateful for the moment of calm."
                    android:inputType="textMultiLine"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/layoutContentSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorTransparentLightGray">

                <EditText
                    android:id="@+id/editDescriptionSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:minHeight="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="top"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorBlack"
                    android:text="Sometimes it's good to just rest, cuddle into a cozy blanket, and do nothing..."
                    android:inputType="textMultiLine"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/layoutSoundFirst"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgSoundPlay"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_start"/>

                <ImageView
                    android:id="@+id/imgSoundEnd"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/stop_sound_selector"/>

                <ImageView
                    android:id="@+id/imgSoundRecord"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sound_record3"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSoundSecond"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgSoundPlaySecond"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_start"/>

                <ImageView
                    android:id="@+id/imgSoundEndSecond"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/stop_sound_selector"/>

                <ImageView
                    android:id="@+id/imgSoundRecordSecond"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sound_record3"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutImages"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgFirst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="48"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:scaleType="fitStart"
                    android:src="@color/colorTransparentWhite"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <ImageView
                    android:id="@+id/imgSecond"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="48"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:scaleType="fitStart"
                    android:src="@color/colorTransparentWhite"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>